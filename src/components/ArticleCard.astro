---
import { formatDate } from "../utils";
import type { CollectionEntry } from "astro:content";
import Tags from "./Tags.astro";
interface BlogType {
  article: CollectionEntry<"blog">;
}
const { article } = Astro.props as BlogType;
---

<div class="article-card">
  <div class="image">
    <img src={"/images/" + article.data.image} alt="Atricle 1" />
  </div>
  <div class="card-content">
    <a href={`/articles/${article.slug}`}>
      <h3 class="title">{article.data.title}</h3>
    </a>
    <p class="date">{formatDate(article.data.pubDate)}</p>
    <Tags tags={article.data.tags} />
  </div>
</div>

<style>
  .article-card {
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    /* height: 300px; */
    overflow: hidden;
  }
  .article-card img {
    width: 100%;
    height: 170px;
    object-fit: cover;
    display: block;
  }
  .card-content {
    padding: 4px 20px;
    margin-bottom: 10px;
  }
  .card-content h3 {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 5px;
  }
  .card-content p {
    font-size: 0.8rem;
  }
</style>
